<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8BBD0">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarGames"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/games_angrybirds"
                    android:contentDescription="Angry Birds" />

                <CheckBox
                    android:id="@+id/checkAngry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angry Birds"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/games_dragonfly"
                    android:contentDescription="Dragon Fly" />

                <CheckBox
                    android:id="@+id/checkDragon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dragon Fly"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/games_hillclimbingracing"
                    android:contentDescription="Hill Climbing Racing" />

                <CheckBox
                    android:id="@+id/checkHillClimb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hill Climbing Racing"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/games_radiantdefense"
                    android:contentDescription="Radiant Defense" />

                <CheckBox
                    android:id="@+id/checkRadiant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radiant Defense"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/games_pocketsoccer"
                    android:contentDescription="Pocket Soccer" />

                <CheckBox
                    android:id="@+id/checkSoccer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pocket Soccer"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/games_ninjump"
                    android:contentDescription="Ninja Jump" />

                <CheckBox
                    android:id="@+id/checkNinja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ninja Jump"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/games_aircontrol"
                    android:contentDescription="Air Control" />

                <CheckBox
                    android:id="@+id/checkAirControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air Control"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- fab -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_menu_save" />

</LinearLayout>
